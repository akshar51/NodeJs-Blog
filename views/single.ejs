<%- include("./partials/header.ejs")%> 
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container pt-5 mt-5">
    <div class="card shadow-lg border rounded-4 p-5 bg-white text-dark">
        <div class="row g-4 align-items-center">
            <div class="col-md-7 order-md-2">
                <div class="card-body">
                    <h2 class="card-title fw-bold text-primary"><%= singleBlog.title %></h2>
                    <p class="text-muted">
                        By <strong class="text-dark"><%= singleBlog.username %></strong> |  
                        <%= new Date(singleBlog.createdAt).toLocaleString("en-US") %> 
                    </p>
                    <p class="card-text lead fw-semibold"><%= singleBlog.content %></p>
                    
                    <!-- Like Icon -->
                    <i class="bi bi-hand-thumbs-up text-primary fs-4"></i>
                </div>
            </div>
            <div class="col-md-5 order-md-1">
                <img src="/<%= singleBlog.image %>" class="img-fluid rounded-3 shadow-sm" alt="Blog Image">
            </div>
        </div>
    </div>
</div>

<%- include("./partials/footer.ejs")%>
