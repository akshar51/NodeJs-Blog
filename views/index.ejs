<%- include("./partials/header.ejs")%>

<main class="m-5">
  <div class="album py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <%blogData.forEach(blog=>{ %>
        <div class="col">
          <div class="card shadow-sm">
            <img
              src="<%= blog.image %>"
              class="bd-placeholder-img card-img-top"
              width="100%"
              height="225"
              alt=""
            />

            <div class="card-body">
              <p class="card-text"><%= blog.content %></p>
              <p><%= blog.username%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">

                  <a type="button" href="/view/<%= blog.id%>" class="btn btn-sm btn-outline-primary">
                    View
                  </a>

                  <a type="button" href="/edit/<%= blog.id%>" class="btn btn-sm btn-outline-warning">
                    Edit
                  </a>

                  <a type="button" href="/delete/<%= blog.id%>" class="btn btn-sm btn-outline-danger">
                    Delete
                  </a>

                </div>
                <small class="text-body-secondary"><%= new Date(blog.createdAt).toLocaleString("en-US") %> </small>
              </div>
            </div>
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </div>
</main>

<%- include("./partials/footer.ejs")%>
